<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ericsson.ecom"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="15"
            />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name"
                 android:icon="@drawable/ic_ecom"
                 android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                 android:name=".app.EcomApplication">
        <activity android:name=".ui.LoginActivity" android:label="eCOM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.Preferences" android:label="Settings"/>
        <activity android:name=".ui.AboutActivity" android:label="About"/>
        <activity android:name=".ui.MainActivity" android:label="Main"/>

    </application>

</manifest>
